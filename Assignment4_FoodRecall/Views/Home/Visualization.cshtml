@{
    ViewData["Title"] = "VisualizationChart";
}

<!DOCTYPE HTML>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	<script>
window.onload = function () {
var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
	title: {
		text: "FoodRecalls"
	},
	axisY: {
		title: "Recall#",
		gridThickness: 0
	},
	data: [{
		type: "bar",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
	}]
});
chart.render();
}
	</script>
</head>
<body>
	<div id="chartContainer" style="height: 400px; width: 90%;"></div>
	<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

	<div>
		<div class="w3-row-padding w3-center w3-margin-top">
			<div class="w3-third">
				<div class="w3-card w3-container" style="max-height:173px">
					<h5>Class I</h5>
					<p font-size:15px>Products that might cause a temporary health problem, or pose only a slight threat of a serious nature. Example: a drug that is under-strength but that is not used to treat life-threatening situations.</p>

				</div>
			</div>

			<div class="w3-third">
				<div class="w3-card w3-container" style="max-height:173px">
					<h5>Class II</h5>
					<p font-size:5px>Dangerous/Defective products that could cause serious health problems or death. Examples include: food containing botulinum toxin, undeclared allergens, label mix-up on a lifesaving drug, or a defective artificial heart valve.</p>

				</div>
			</div>

			<div class="w3-third">
				<div class="w3-card w3-container" style="min-height:220px">
					<h5>Class III</h5>
					<p font-size:15px>Products that are unlikely to cause any adverse health reaction, but that violate FDA labeling or manufacturing laws. Examples include: a minor container defect and lack of English labeling in a retail food.</p>

				</div>
			</div>
		</div>
	</div>

</body>
</html> 